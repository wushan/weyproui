extends layouts/default
include layouts/mixin/_mixin

block content
	main.with-aside
		aside
			.aside-inner
				nav.navigation
					include layouts/menu
		#main
			section
				.container.restrict
					h1 Chart.js
						small
							|	Amazing HTML5 Canvas Chart / Current Version : 2.1.6 / See 
							a(href='http://www.chartjs.org/docs/' target='_blank') documention.
							|	 here
					.container.restrict-tiny
						canvas#myChart(width="400" height="400")
					
					h3 Canvas
					pre
						code.language-jade.
							.container.restrict-tiny
								canvas#myChart(width="400" height="400")
					h3 Trigger
					pre
						code.language-js.
							var ctx = $("#myChart");
							if (ctx) {
								var myChart = new Chart(ctx, {
								    type: 'bar',
								    data: {
								        labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
								        datasets: [{
								            label: '# of Votes',
								            data: [12, 19, 3, 5, 2, 3],
								            backgroundColor: [
								                'rgba(255, 99, 132, 0.2)',
								                'rgba(54, 162, 235, 0.2)',
								                'rgba(255, 206, 86, 0.2)',
								                'rgba(75, 192, 192, 0.2)',
								                'rgba(153, 102, 255, 0.2)',
								                'rgba(255, 159, 64, 0.2)'
								            ],
								            borderColor: [
								                'rgba(255,99,132,1)',
								                'rgba(54, 162, 235, 1)',
								                'rgba(255, 206, 86, 1)',
								                'rgba(75, 192, 192, 1)',
								                'rgba(153, 102, 255, 1)',
								                'rgba(255, 159, 64, 1)'
								            ],
								            borderWidth: 1
								        }]
								    },
								    options: {
								        scales: {
								            yAxes: [{
								                ticks: {
								                    beginAtZero:true
								                }
								            }]
								        }
								    }
								});
							}

